{% extends 'base.html.twig' %}

{% block body %}
<h1>Wyszukaj profil użytkownika</h1>

<form action="{{ path('app_user_search') }}" method="GET">
    <input type="text" name="query" placeholder="Wpisz adres e-mail użytkownika..." required>
    <button type="submit">Szukaj</button>
</form>

{% if users is defined %}
    <h2>Wyniki wyszukiwania:</h2>
    <ul>
        {% for user in users %}
            <li>
                <a href="{{ path('app_profile_search', {'id': user.id}) }}">{{ user.email }}</a>
            </li>
        {% endfor %}
    </ul>
{% endif %}
{% endblock %}